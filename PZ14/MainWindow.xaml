<Window x:Class="PatrolApp.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Patrol App" Height="350" Width="500">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="*" />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>

        <TextBlock x:Name="SpeedTextBlock" HorizontalAlignment="Center" VerticalAlignment="Center" FontSize="24" />

        <Button x:Name="StartButton" Content="Start" Grid.Row="1" HorizontalAlignment="Center" Margin="10" Click="StartButton_Click" />
    </Grid>
</Window>